
<%- include("partials/header"); -%>
<div class="home-intro">
    <h1>Home</h1>
    <p class="home-note">Keep all your daily notes, reminders, thoughts, ideas here.</p>
</div>

<%  posts.forEach(function(post){ %>

<h1><%=post.name%></h1>
<p class="post-desc">
<%=post.body.substring(0, 100) + " ..."%>
<a href="/posts/<%=post._id%>">Read More</a>
</p>
<% }) %>

<div class="wrt-btn-container">
    <a href="/compose">
        <button class="btn btn-lg btn-outline-secondary write-btn">Write</button>
    </a>
</div>

<%- include("partials/footer"); -%>
